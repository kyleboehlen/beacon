{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "env.d.ts",
    "global.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "vite.config.*",
    "vitest.config.*",
    "eslint.config.*",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}